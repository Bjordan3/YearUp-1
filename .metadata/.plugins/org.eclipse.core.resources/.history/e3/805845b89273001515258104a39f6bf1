// This is a class
public class Chapter1 {

	// This is a method. The main method
	public static void main(String[] args) {

		// This is a println
		System.out.println("My name is Jacquan");

		// These are few variable
		int a;
		int b = 1;
		int sum;
		double c = 3;
		float d;
		char e;
		String f;

		// This is assigning variables information
		a = 2;

		// This is using the operators to do simple math.
		sum = a + b;
		sum = a - b;
		sum = a / b;

		// This is an if statement
		if (a < 5) {
			System.out.println("A does not greater than five");
			a++;
		}
		a = 10;
		if (a > 5) {
			System.out.println("A does not less than five. A = " + a);
		}

		// This is a for loop
		int count;
		for (count = 0; count < 21; count = count+1) {
			System.out.println("The count is " + count);
			System.out.println("We are done now that the count is " + count);
		}

	}

}
