
public class Circle {
	String m_color = null;
	double m_radius;

	public static void main(String[] args) {
		Circle bigCircle = new Circle(10);
		Circle smallCircle = new Circle(5, "blue");
		
		System.out.println(smallCircle.m_color+ " is the color of the small circle and " + smallCircle.m_radius + " is the radius of the small circle");
	}
	Circle(int radius) {
		m_radius = radius;
		m_color = "grey";
	}
	Circle(int radius, String color) {
		m_radius = radius;
		m_color = "grey";
	}
	double CalculateArea() {
		double area = 3.14 * m_radius * m_radius;
		return area;
	}
	void PrintColor() {
		System.out.println("My color is " + " " + m_color);
	}

}
